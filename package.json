{
  "name": "sbirr",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/contracts",
    "packages/sdk"
  ],
  "scripts": {
    "build": "bun run build:contracts && bun run build:sdk",
    "build:contracts": "bun run --filter @tolbel/sbirr-contracts compile",
    "build:sdk": "bun run --filter @tolbel/sbirr build",
    "test": "bun run --filter '*' test",
    "deploy": "bun run --filter @tolbel/sbirr-contracts deploy"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
